[core]
	excludesfile = ~/.gitignore_global
	precomposeunicode = true
	quotepath = false
	editor = vim -c \"set fenc=utf-8\"
	autocrlf = input
[user]
	name = Hirofumi Wakasugi
	email = baenej@gmail.com
	signingkey = 3D244A690D1DAFC8
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	a = add
	b = branch
	c = commit
	co = checkout
	cob = checkout -b
	d = diff
	f = fetch
	g = grep
	l = log --oneline --decorate --graph
	p = pull
	st = status
	pbcopy = !printf "$1" | pbcopy
	delete-merged-branches = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|master'|xargs git branch -d; };f"
[log]
	date = iso
[fetch]
	prune = true
[push]
	default = simple
[diff]
	tool = Kaleidoscope
[merge]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[ghq]
	root = ~/ghq
	root = ~/go/src
[tig "bind"]
	main = C !@git pbcopy %(commit)
[rebase]
	autostash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	program = /usr/local/bin/gpg
[commit]
	gpgsign = true
